{% extends 'base.html.twig' %}

{% block title %}Food list{% endblock %}

{% block body %}

    <div class="container">

        <h1 class="food_list_title"> Sugar free foods</h1>

        <div class="row col-lg-12">

            {% if is_granted('ROLE_USER') %}
            <div class="search_bar" style="background: black; color: white; border-radius: 5px; padding: 10px">
                Food Search : <br>
                <form action="{{ path('food_process_search') }}" method="POST">

                    <span style="margin: 5px">
                        <label for="text_search">Text Search</label>
                        <input type="text" name="text_search" id="text_search">
                    </span>
                    <span style="margin: 5px">
                        <label for="date_search">Date Search</label>
                        <input type="date" name="date_search" id="date_search">
                    </span>
                    <span style="margin: 5px">
                         <label for="text_search">Price range : </label>
                        <span style="margin: 5px">
                            <input type="radio" name="price_range" value="" checked> choose range
                        </span>
                        <span style="margin: 5px">
                            <input type="radio" name="price_range" value="0"> €0 - 1
                        </span>
                        <span style="margin: 5px">
                            <input type="radio" name="price_range" value="1"> €1 - 3
                        </span>
                        <span style="margin: 5px">
                            <input type="radio" name="price_range" value="2"> €3 - 5
                        </span>
                        <span style="margin: 5px">
                            <input type="radio" name="price_range" value="3"> €5+
                        </span>
                          <span style="margin: 10px">
                            <input type="submit" name="Search_foods" value="Search foods">
                        </span>

                    </span>

                </form>
            </div>
            {% endif %}
            <div class="col-md-12 row">
                {% set i = 0 %}
                {% for food in foods %}

                <div class="col-md-3 food_item_view">
                <a href="{{ path('food_show_detail', {'id': food.id}) }}">
                <h3>{{ food.title }}</h3>
                {% if photos[i] is not null and photos[i] != "none"%}
                <img class="food_main" src="{{ photos[i] }}" alt ="{{ food.title }} image">
                {% elseif photos[i] == "none" %}
                <img class="food_main" src="/images/full_star.png" alt ="{{ food.title }} image">
                {% endif %}
                {% set i = i + 1 %}
                <br>
                <p>{{ food.summary }}</p>
                <p>Click to view reviews</p>
                </a>
                </div>

                {% else %}
                <div class="col-md-12">
                <div class="alert alert-primary" role="alert">
                There is no foods available. There maybe more available if you register!
                </div>
                </div>
                {% endfor %}
                </div>
            </div>
{% endblock %}