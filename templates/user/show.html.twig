{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}

    <h1>User</h1>

    <table>
        <tr>
            <th>Id</th>
            <td>{{ user.id }}</td>
        </tr>
        <tr>
            <th>Username</th>
            <td>{{ user.username }}</td>
        </tr>

    </table>

    <a href=" {{ url('food_show_users', {'id':user.id})}}">Show my foods</a>
    <a href=" {{ url('review_show_users', {'id':user.id})}}">Show my reviews</a>

    <a href="{{ path('user_index') }}">back to list</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>

    {% include 'user/_delete_form.html.twig' with {'identifier': user.id} only %}

{% endblock %}