<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
            <link rel="stylesheet" href="/css/font-awesome.css">
            <link rel="stylesheet" href="/css/styles.css">
            <link rel="stylesheet" href="/css/food.css">

        {% endblock %}
    </head>
    <body>
        <nav>
            <ul>
                <li><a href="{{ url('home') }}">Home</a></li>
                {% if user_id is not defined or user_id is null%}
                    <li><a href="{{ url('register') }}">Register</a></li>
                    <li><a href="{{ url('login') }}">Log in</a></li>
                {% endif %}

                <li><a href="{{ path('food_index')}}">See foods</a></li>

                {% if user_id is defined and user_id is not null %}
                    <li><a href="{{ path('food_new')}}">Add new food</a></li>
                    <li><a href="{{ path('user_show', {'id': user_id})}}">Profile</a></li>
                    <li><a href="{{ url('logout') }}">Log out</a></li>
                {% endif %}

            </ul>
        </nav>

        {% for flash_message in app.session.flashBag.get('success') %}
            <div class="flash-notice"> {{ flash_message }} </div>
        {% endfor %}

        {% for flash_message in app.session.flashBag.get('error') %}
            <div class="flash-notice"> {{ flash_message }} </div>
        {% endfor %}

        {% block body %}
        {% endblock %}

        {% block javascripts %}{% endblock %}
    </body>
</html>
